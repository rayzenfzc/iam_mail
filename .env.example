# I AM MAIL - Environment Configuration

# Default IMAP/SMTP (For single-account backward compatibility)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=your-email@gmail.com
IMAP_PASS=your-app-password
IMAP_SECURE=true

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_SECURE=true

# Google Gemini API
API_KEY=your-gemini-api-key

# Firebase Admin SDK (for multi-account storage)
FIREBASE_PROJECT_ID=iammail-a2c4d
FIREBASE_CLIENT_EMAIL=your-service-account@iammail-a2c4d.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Encryption Key for password storage (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# VAPID Keys for Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Application Settings
NODE_ENV=development
PORT=5001
BASE_URL=http://localhost:5001